{
  "coveragePathIgnorePatterns": ["seed-*"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./src",
  "testEnvironment": "node",
  "testRegex": ".test.ts",
  "testPathIgnorePatterns": ["e2e-test"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/node_modules/**",
    "!**/migrations/**"
  ],
  "coverageDirectory": "../coverage",
  "coverageReporters": ["json", "text-summary"]
}
